%header
  .nav
    
  .fv-view
  = image_tag 'hero-img.png', alt: 'fv-image', height: '260px', width: '100%', class: 'fv-image'




.search_box
  = form_with url: search_books_path, method: :get, class: "form-box",local: true do |f|
    .search_box__form
      = f.text_field :keyword, class: "input-form", placeholder: "本のタイトルを入力してください"
    .search_box__btn
      = f.submit '本の題名を検索', class: "submit-btn"

.search-result
  = render 'books/book'


